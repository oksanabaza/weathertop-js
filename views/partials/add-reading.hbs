<form class="box" action="/station/{{station._id}}/addreading" method="POST">
  <label>Enter Reading Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Enter Title" name="code" />
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Artist" name="temp" />
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter duration" name="windSpeed" />
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter duration" name="pressure" />
      </div>
    </div>
  </div>
  <button class="button is-primary">Add Reading</button>
</form>