<script>
  function generateReading(id){
 console.log(id,"id")
     fetch(`/station/${id}/generatereading`, {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
            },
        })
        .then(response => {
            if (response.ok) {
              
                window.location.href = `/station/${id}`;
             
                
            } else {
                console.error("Error deleting station");
            }
        })
        .catch(error => {
            console.error("Error deleting station:", error);
        });
     

  }
</script>

